<script type="text/javascript">
	$('#search').on('input', (e) => {
		filterList(e.target.value)
	})

	function filterList(value) {
		let results = 0;
		$.each($(".listing"), function() {
			if (!($(this).data().keywords.toLowerCase().indexOf(value) >= 0)) {
				$(this).fadeOut("fast");
			} else {
				results++
				$(this).delay(200).slideDown("fast");
			}
		})
		$('#showing-results').text(results + " Results Found");
	}
</script>

